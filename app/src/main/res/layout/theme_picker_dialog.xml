<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/theme_picker_blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_blue"
            android:layout_margin="20dp"/>
        <ImageView
            android:id="@+id/theme_picker_teal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_teal"
            android:layout_margin="20dp"/>
        <ImageView
            android:id="@+id/theme_picker_purple"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_purple"
            android:layout_margin="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/theme_picker_grey"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_grey"
            android:layout_margin="20dp"/>
        <ImageView
            android:id="@+id/theme_picker_orange"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_orange"
            android:layout_margin="20dp"/>
        <ImageView
            android:id="@+id/theme_picker_pink"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_pink"
            android:layout_margin="20dp"/>
    </LinearLayout>


</LinearLayout>