<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TealTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#004d40</item>
        <item name="colorAccent">#009688</item>
    </style>

    <style name="PurpleTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">#673ab7</item>
        <item name="colorPrimaryDark">#311b92</item>
        <item name="colorAccent">#673ab7</item>
    </style>

    <style name="GreyTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">#607d8b</item>
        <item name="colorPrimaryDark">#263238</item>
        <item name="colorAccent">#607d8b</item>
    </style>

    <style name="OrangeTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">#ff5722</item>
        <item name="colorPrimaryDark">#bf360c</item>
        <item name="colorAccent">#ff5722</item>
    </style>

    <style name="PinkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">#e91e63</item>
        <item name="colorPrimaryDark">#880e4f</item>
        <item name="colorAccent">#e91e63</item>
    </style>
</resources>
